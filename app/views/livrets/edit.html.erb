<!-- Header -->
<header class="business-header">
  <div class="slideshow"></div>
</header>
<!-- Header -->
<section class="container content-section text-center tb-padding">
  <div class="row">
    <div class="col-md-6 text-left">
      <h1>Trip Infos</h1>
      <p>Trip ID : <%= @trip.id %></p>
      <p>User email : <%= @trip.user.email %>
      <p>Price : <%= @trip.price %>â‚¬
    </div>
    <div class="col-md-6 text-left">
      <h1>Livret Infos</h1>
      <p>Name :<%= @livret.htmlbook_file_name %></p>
      <p>Type :<%= @livret.htmlbook_content_type %></p>
      <p>Size :<%= @livret.htmlbook_file_size %></p>
      <p>UpdatedAt :<%= @livret.htmlbook_updated_at %></p>
    </div>
    <div class="col-md-12">
      <% if @trip.gestion.status != 'final' %>
        <%= link_to "Finalize this Trip", trip_gestion_path(@trip, @trip.gestion,
                  :status => :final), :method => :put, :data => {:confirm => 'Finalize this trip ?'},
                  class: 'btn btn-success btn-block' %>
      <% else %>
        <div class="alert alert-success">Trip status : <strong><%= @trip.gestion.status %></strong></div>
      <% end %>
    </div>
    <div class="col-md-12 tb-padding">
      <h4>Change livret : </h4>
      <%= render 'form', livret: @livret %>
    </div>
  </div>
</section>
