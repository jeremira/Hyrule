<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <title>Hyrule</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <% if Rails.env.production? %>
      <script type="text/javascript">
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-105143670-1', 'auto');
      </script>
    <% end %>

  </head>
  <body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    <!-- Navigation -->
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
      <div class="container surligne">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
            Menu <i class="fa fa-bars"></i>
          </button>
          <a class="navbar-brand page-scroll" href="<%= root_path %>">
            <i class="fa fa-play-circle"></i> <span class="light">Tokyop!</span>
          </a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
          <ul class="nav navbar-nav">
            <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
            <li class="hidden"><a href="#page-top"></a></li>
            <li><%= link_to 'Que faire à Tokyo ?', themes_path, class: "page-scroll" %></li>
            <li><%= link_to 'Une question ?', root_path, class: "page-scroll" %></li>
            <% if current_user %>
              <li><%= link_to 'Mes voyages', trips_path, class: "page-scroll" %></li>
              <li><%= link_to 'Mon profil', user_path(current_user), class: "page-scroll" %></li>
              <li><%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "page-scroll" %></li>
              <% if current_user && current_user.admin %>
                <li><%= link_to 'Admin Control', setup_index_path, class: "page-scroll" %></li>
              <% end %>
            <% else %>
              <li><%= link_to 'Se connecter',    new_user_session_path(anchor: 'login-row'), class: "page-scroll" %></li>
              <li><%= link_to 'Créer un compte', new_user_registration_path, class: "page-scroll" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <section id="flash-section">
      <%if flash[:notice] %>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3">
          <div class="alert alert-success alert-dismissable fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= flash[:notice] %>
          </div>
        </div>
      </div>
      <% end %>
      <%if flash[:alert] %>
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3">
            <div class="alert alert-warning alert-dismissable fade in">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
              <%= flash[:alert] %>
            </div>
          </div>
        </div>
      <% end %>
    </section>

    <%= yield %>

    <footer>
      <div class="container text-center">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <ul class="list-unstyled list-inline">
              <li><%= link_to 'Nous contacter', '#' %></li>
              <li><%= link_to 'Que faire à Tokyo ?', themes_path %></li>
              <li><%= link_to 'Informations', root_path %></li>
              <% if current_user %>
                <li><%= link_to 'Mes voyages', trips_path %></li>
                <li><%= link_to 'Mon profil', user_path(current_user) %></li>
                <li><%= link_to "Se déconnecter", destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to 'Se connecter',    new_user_session_path(anchor: 'login-row')%></li>
                <li><%= link_to 'Créer un compte', new_user_registration_path%></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
